@page "/transactions"
@rendermode InteractiveServer

<PageTitle>Transaktioner - Budget App</PageTitle>

<MudContainer>
    <MudText Typo="Typo.h4" Class="mb-4">Transaktioner</MudText>
    
    <MudAlert Severity="Severity.Info">
        <MudText Typo="Typo.h6">Transaktionshantering</MudText>
        <MudText>Denna sida kommer att visa alla transaktioner med filter- och sökfunktioner.</MudText>
        <MudText Class="mt-2"><strong>Funktioner som kommer att implementeras:</strong></MudText>
        <ul>
            <li>Lista alla transaktioner</li>
            <li>Filtrera per konto, kategori, datum</li>
            <li>Sök i transaktioner</li>
            <li>Redigera och ta bort transaktioner</li>
            <li>Skapa nya transaktioner manuellt</li>
            <li>Transaktionsdetaljer med split-funktionalitet</li>
        </ul>
    </MudAlert>
